        meta(name='viewport' content='width=device-width, initial-scale=1')
    body
        nav.navbar.navbar-inverse
            div.navbar-header
                a(href="/back/").navbar-brand= ""
                div.navbar-brand(style="width:50%;margin: 0 auto;text-align:center;")= "Liste des jeux"
        div.container
            div.list-group
                for game in games
                    button.list-group-item(onclick="select("+ game.id +")")= game.name
